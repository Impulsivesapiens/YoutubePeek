{
  "manifest_version": 3,
  "name": "YouTube Peek Custom",
  "version": "1.44",
  "description": "YouTube Peek with API-Level Resizing",
  "permissions": [
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["player-fix.js"],
      "all_frames": true,
      "world": "MAIN",
      "run_at": "document_end"
    }
  ]
}
